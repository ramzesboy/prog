#include <stdio.h>
#include <windows.h>

int main() {

    //переклад на кирилицю
    SetConsoleCP(1251);          
    SetConsoleOutputCP(1251);

    //
    int t1, t2, t3;
    float total_time;

    //ввести час для першого гостя
    printf("Надайте час (в годинах) для першого гостя: ");
    scanf("%d", &t1);

    //ввести час для другого гостя
    printf("Надайте час (в годинах) для другого гостя: ");
    scanf("%d", &t2);

    //ввести час для третього гостя
    printf("Надайте час (в годинах) для третього гостя: ");
    scanf("%d", &t3);

    //обчислення загального часу
    total_time = (float)(t1 + t2 + t3) / 3.0;

    //вивід результату
    printf("Загальний час, за який гості можуть з'їсти пиріг: %.2f годин\n", total_time);

    return 0;
}
