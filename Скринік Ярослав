#include <stdio.h>

int main() {
    int t1, t2, t3; // Оголошення змінних t1, t2, t3
    printf("Введіть три значення: "); // Виведення повідомлення
    scanf("%d %d %d", &t1, &t2, &t3); // Отримання введених значень і збереження їх у змінних t1, t2, t3
    double result = 1.0 / (1.0/t1 + 1.0/t2 + 1.0/t3); // Обчислення часу з використанням введених значень
    printf("Час, необхідний для з'їдання пирога: %.3f годин\n", result); // Виведення результату
    return 0;
}
